mixin purple-with-arrow(name,href)
    .filled-block
        a(class="filled-block__btn" href=href)= name
            .filled-block__arrow
                <i class="fas fa-arrow-right"></i>

mixin  white-gradient(name,href)
    .login-btn__border
        a(class="login-btn__login" href=href)=name

mixin purple-btn(name,href)
    .filled-btn
        a(class="filled-block__btn" href=href)= name

mixin register-btn(name,href)
    .register-but
        a(href=href class="register-but__btn")=name

