mixin text-input(placeholder)
    .text-input
        if(placeholder === "Email")
            input(type="email" placeholder=placeholder class="text-input__input")
        
        else
            input(type="text" placeholder=placeholder class="text-input__input")



mixin text-input-border_bright(placeholder)
    .text-input-border_bright
        if(placeholder === "Email")
            input(type="email" placeholder=placeholder class="text-input__input")
        
        else
            input(type="text" placeholder=placeholder class="text-input__input")
        
        