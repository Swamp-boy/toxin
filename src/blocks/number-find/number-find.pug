include ./../buttons/btn-mixin.pug
include ./../calendar/calender-mixin.pug
include ./../dropdown/dropdown-mixin.pug

.number-find
    fieldset(class="number-find__wrap") 
        h1(class="number-find__title") Найдём номера под ваши пожелания

        .number-find__datepicker
            .number-find__datepicker-container
                +clendar-from('number-find__datepicker-from', 'ПРИБЫТИЕ')
            .number-find__datepicker-container
                +clendar-to('number-find__datepicker-to', 'ВЫЕЗД')
                    
                
        
        .number-find__guests
            +people-drop-buttons('взрослые', 'дети', 'младенцы', 'number-find-dropdown', 'ГОСТИ')
        
        .number-find__button
            +purple-with-arrow('Подобрать номер',"number-page.html")
                