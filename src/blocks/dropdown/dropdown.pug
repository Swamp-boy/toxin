div(class="dropdawn" id="border_style")
    label(class="dropdawn__guests-calc" id="dropdawn__guests-calc")
        input(type="" placeholder="Сколько гостей" id="drop_val")
        div(class="arrow-block")
            i(class="arrow down")
    ul(class="dropdawn__buttons" id ="dropdawn__buttons")
        li(class="dropdawn__buttons-topbtn")
            div(class="dropdawn__buttons__block")
                h2 взрослые
                div(class="dropdawn__buttons__block__calc dropdawn__buttons__block__calc-adult")
                    button(class="minus" id ="minus-adult") -
                    span(class="number" id ="number-adult") 0
                    button(class="plus" id="plus-adult") +
        li
            div(class="dropdawn__buttons__block")
                h2 дети
                div(class="dropdawn__buttons__block__calc dropdawn__buttons__block__calc-child")
                    button(class="minus" id ="minus-child") -
                    span(class="number" id ="number-child") 0
                    button(class="plus" id="plus-child") +
        li
            div(class="dropdawn__buttons__block")
                h2 младенцы
                div(class="dropdawn__buttons__block__calc dropdawn__buttons__block__calc-smallchild")
                    button(class="minus" id ="minus-baby") -
                    span(class="number" id ="number-baby") 0
                    button(class="plus" id="plus-baby") +
        li
            div(class="dropdawn__buttons__block")
                button(type="" onclick="" class="clear-but" id="clear-but") ОЧИСТИТЬ
                button(type="" onclick="" class="ok-but" id="ok-but") ПРИМЕНИТЬ

                    

    

    
